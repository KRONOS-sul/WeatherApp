<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.InfoFragment">

    <ImageView
        android:id="@+id/light_outside"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:src="@drawable/graphic"
        app:layout_constraintBottom_toTopOf="@id/container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/light_outside">

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="Sunday, 21 April 2007 | 7:54PM"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/country_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switzerland, Geneva"
            android:textColor="@color/sky_blue"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginEnd="270dp"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/date">


            <!--1________Облачность_________-->
            <ImageView
                android:id="@+id/weather_img"
                android:layout_width="40dp"
                android:layout_height="26dp"
                android:layout_marginStart="6dp"
                android:layout_marginTop="12dp"
                android:src="@drawable/cloudiness" />

            <TextView
                android:id="@+id/weather"
                style="@style/weather_info"
                android:text="Cloudy"
                android:textSize="18sp" />


            <!-- 2________Влажность_________-->
            <ImageView
                android:id="@+id/humidity_img"
                style="@style/weather_img"
                android:src="@drawable/drop_with_wind" />

            <TextView
                android:id="@+id/humidity_number"
                style="@style/weather_info"
                android:layout_marginStart="12dp"
                android:text="45%" />

            <TextView
                android:id="@+id/humidity"
                style="@style/weather_info_hint"
                android:text="Humidity" />


            <!-- 3________Восход_________-->
            <ImageView
                android:id="@+id/sunrise_img"
                style="@style/weather_img"
                android:src="@drawable/sunrise" />

            <TextView
                android:id="@+id/sunrise_time"
                style="@style/weather_info"
                android:text="3:25 AM" />

            <TextView
                android:id="@+id/sunrise"
                style="@style/weather_info_hint"
                android:layout_marginStart="6dp"
                android:text="Sunrise" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="124dp"
            android:orientation="vertical"
            android:padding="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/linear1"
            app:layout_constraintTop_toBottomOf="@id/date">

            <TextView
                android:id="@+id/temperature"
                style="@style/weather_info"
                android:text="25"
                android:textSize="50sp" />
            <TextView
                android:id="@+id/temperature_number"
                style="@style/weather_info_hint"
                android:textSize="24sp"
                android:text="°С"/>
            <!--                android:layout_marginBottom=""-->

            <ImageView
                android:id="@+id/pressure_img"
                style="@style/weather_img"
                android:src="@drawable/pressure" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>